config("impeller_public_config") {
  include_dirs = [ ".." ]
}

group("impeller") {
  deps = [
    "base",
    "compiler",
    "compositor",
    "entity",
    "geometry",
    "image",
    "primitives",
    "shader_glue",
  ]
}

executable("impeller_unittests") {
  testonly = true

  deps = [
    "compiler:compiler_unittests",
    "compositor:compositor_unittests",
    "entity:entity_unittests",
    "fixtures",
    "geometry:geometry_unittests",
    "playground",
    "primitives:primitives_unittests",
  ]
}
